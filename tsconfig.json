{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react",
    "noEmit": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "src/App.tsx",
    "src/index.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
